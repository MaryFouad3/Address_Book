
@model List<Department>
@{
    Layout = "_Layout";
}

    <table class="table table-bordered table-hover" width="50%">
     <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Manager
        </th>
        
      
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Manager</td>
            <td> <a asp-action="edit" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-warning">Edit</a></td>
            <td><a asp-action="delete" onclick="confirmDelete()" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>
           
        </tr>
    }
    </table>

    <a href="/Department/add"><input  type="button" value="add" class="btn mt-2 btn-primary" /></a>

    <script>
    function confirmDelete() 
    {
        let message = confirm("Are You Sure?");
        if(message == false)
            event.preventDefault();
    }
    </script>

